<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.iut.montreuil.projetFinal.controleur.Controleur">
    <center>
        <Pane fx:id="pane">
            <TilePane fx:id="tilePane" maxHeight="800.0" maxWidth="1200.0" prefColumns="75" onMouseClicked="#choixTour">
            </TilePane>
        </Pane>
    </center>

   <right>
      <VBox prefHeight="400.0" prefWidth="280.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="123.0" prefWidth="214.0">
               <children>
                  <HBox prefHeight="26.0" prefWidth="143.0">
                     <children>
                        <RadioButton fx:id="ajouterTourArchers" mnemonicParsing="false" prefHeight="18.0" prefWidth="0.0">
                           <toggleGroup>
                              <ToggleGroup fx:id="selectionDefense" />
                           </toggleGroup>
                        </RadioButton>
                        <ImageView fx:id="imageTda" fitHeight="46.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true"  onMouseEntered="#mouseEnteredTourArcher"  onMouseExited="#mouseExitTourArcher">
                           <image>
                              <Image url="@tda_Coc.png" />
                           </image>
                        </ImageView>
                        <Label alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="50.0" text="50">
                           <font>
                              <Font name="Caladea" size="20.0" />
                           </font>
                        </Label>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@imgPiece.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox prefHeight="57.0" prefWidth="200.0">
                     <children>
                        <RadioButton fx:id="ajouterCanon" mnemonicParsing="false" prefHeight="18.0" prefWidth="0.0" toggleGroup="$selectionDefense"  />
                        <ImageView fx:id="imageCanon" fitHeight="39.0" fitWidth="46.0" pickOnBounds="true" preserveRatio="true" onMouseEntered="#mouseEnteredCanon"  onMouseExited="#mouseExitCanon">
                           <image>
                              <Image url="@canon_Coc.png" />
                           </image>
                        </ImageView>
                        <Label alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="55.0" text="75">
                           <font>
                              <Font name="Caladea" size="20.0" />
                           </font>
                        </Label>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@imgPiece.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
                  <HBox prefHeight="57.0" prefWidth="200.0">
                     <children>
                        <RadioButton fx:id="vendreTour" mnemonicParsing="false" prefHeight="18.0" prefWidth="0.0" toggleGroup="$selectionDefense" />
                        <Label alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="55.0" text="Vendre une Tour">
                           <font>
                              <Font name="Caladea" size="20.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               <HBox prefHeight="57.0" prefWidth="200.0">
                  <children>
                     <RadioButton fx:id="ajouterArcX" mnemonicParsing="false" prefHeight="18.0" prefWidth="0.0" toggleGroup="$selectionDefense" />
                     <Label alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="55.0" text="ArcX">
                        <font>
                           <Font name="Caladea" size="20.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               </children>
            </VBox>

            <VBox prefHeight="82.0" prefWidth="214.0">
               <children>
                  <VBox prefHeight="70.0" prefWidth="214.0">
                     <children>
                        <Label text="or disponible : " />
                        <HBox prefHeight="25.0" prefWidth="214.0">
                           <children>
                              <Label fx:id="compteurOr" alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="49.0" text="0">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@imgPiece.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox prefHeight="203.0" prefWidth="214.0">
               <children>
                  <Label fx:id="messageJoueur" />
                  <Label fx:id="NbVivant" text="Ennemi restant :">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <Label fx:id="NbMort" text="Ennemi mort : ">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <HBox prefHeight="34.0" prefWidth="280.0">
                     <children>
                        <ProgressBar fx:id="VieEnnemi" prefWidth="200.0" progress="100.0" />
                        <Label fx:id="PvHdv" prefHeight="19.0" prefWidth="78.0" text="pv Hdv : ">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>

                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox prefHeight="48.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0">
               <children>
                  <ImageView fitHeight="42.0" fitWidth="37.0" onMouseClicked="#ralentirJeu" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@boutonRalentir.png" />
                     </image>
                  </ImageView>
                  <HBox prefHeight="35.0" prefWidth="20.0" />
                  <ImageView fx:id="imagePausereprendre" fitHeight="35.0" fitWidth="51.0" onMouseClicked="#mettrePause" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@imgPause.png" />
                     </image>
                  </ImageView>
                  <HBox prefHeight="35.0" prefWidth="20.0" />
                  <ImageView fitHeight="42.0" fitWidth="37.0" onMouseClicked="#accelererJeu" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@31085.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>

</BorderPane>
